<div class="container-fluid text center">
<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <td><%= client.movies.last %></td>
    <td><%= link_to "Ver", client, class:"btn btn-outline-primary"  %></td>
    <td><%= link_to "Editar", edit_client_path(client), class:"btn btn-outline-primary"  %></td>
    
    <td><%= link_to "Eliminar", client_path(client), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Estas seguro de eliminar?"
                  }, class:"btn btn-outline-primary" %></td>
  </tr>
</div>
</div>